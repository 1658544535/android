<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pingtuantips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:src="@mipmap/pingtuantips"
        app:layout_heightPercent="9.98%w" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_line"
        app:layout_marginRightPercent="3.22%w"
        app:layout_marginLeftPercent="3.22%w"
        />

    <com.qunyu.taoduoduo.widget.ListViewForScrollView
        android:id="@+id/lv_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        />
</com.zhy.android.percent.support.PercentLinearLayout>