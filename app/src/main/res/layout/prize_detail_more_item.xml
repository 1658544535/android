<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="11.9%w"
        app:layout_paddingRightPercent="2.7%"
        app:layout_paddingLeftPercent="2.7%"
        app:layout_paddingTopPercent="1.4%w"
        app:layout_paddingBottomPercent="1.4%w"
        android:background="@color/bg_01">

        <ImageView
            android:id="@+id/iv_prizeDetail_touxianm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8.5%w"
            app:layout_widthPercent="8.5%"
            android:src="@mipmap/default_touxiang" />

        <TextView
            android:id="@+id/tv_tuanzhang_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="6.4%"
            app:layout_heightPercent="2.8%w"
            app:layout_textSizePercent="2.3%w"
            android:text="团长"
            app:layout_marginLeftPercent="2.3%"
            app:layout_marginTopPercent="5.9%w"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shap_corner_blue_white" />

        <TextView
            android:id="@+id/tv_prizeDetail_namem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="2.8%w"
            app:layout_marginTopPercent="3%w"
            app:layout_marginLeftPercent="13.6%w"
            android:textColor="@color/text_05" />

        <TextView
            android:id="@+id/tv_prizeDetail_orderNumm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="2.8%w"
            app:layout_marginTopPercent="3%w"
            app:layout_marginLeftPercent="39.6%w"
            android:textColor="@color/text_23"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_prizeDetail_timem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="2.8%w"
            app:layout_marginTopPercent="2%w"
            app:layout_marginLeftPercent="78.9%w"
            android:textColor="@color/text_23" />

    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>