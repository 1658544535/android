<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35.4%w"
        app:layout_paddingPercent="1.8%w">

        <ImageView
            android:id="@+id/iv_lotteryLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="32.4%w"
            app:layout_widthPercent="32.4%"
            android:src="@mipmap/default_load" />

        <TextView
            android:id="@+id/tv_tnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_picture"
            android:background="@drawable/red_shape_corner"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/base_red"
            android:layout_toRightOf="@+id/iv_lotteryLogo"
            app:layout_marginLeftPercent="2.4%w"
            app:layout_textSizePercent="2.8%w"
            app:layout_marginTopPercent="2.4%w" />


        <TextView
            android:id="@+id/tv_lotteryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="58.2%"
            app:layout_textSizePercent="3.3%w"
            android:textColor="@color/text_05"
            android:layout_toRightOf="@+id/iv_lotteryLogo"
            app:layout_marginLeftPercent="2.4%w"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_marginTopPercent="2.4%w" />

        <TextView
            android:id="@+id/tv_lotteryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="4.4%w"
            android:layout_toRightOf="@+id/iv_lotteryLogo"
            app:layout_marginLeftPercent="2.4%w"
            app:layout_marginTopPercent="24.4%w"
            android:textColor="@color/text_01"
            android:text="￥0.1" />

        <TextView
            android:id="@+id/tv_lotteryAlonePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="3.4%w"
            android:layout_toRightOf="@+id/tv_lotteryPrice"
            android:layout_alignBottom="@+id/tv_lotteryPrice"
            app:layout_marginLeftPercent="2.4%w"
            app:layout_marginTopPercent="24.4%w"
            android:textColor="@color/text_20"
            android:text="￥0.1" />


        <ImageView
            android:id="@+id/iv_openGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6.6%w"
            app:layout_widthPercent="14.5%"
            android:layout_alignParentRight="true"
            app:layout_marginTopPercent="22.4%w"
            app:layout_marginRightPercent="1.8%w"
            android:src="@mipmap/open_group_icon" />

        <ImageView
            android:id="@+id/iv_ckpl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6.6%w"
            app:layout_widthPercent="14.5%"
            android:layout_alignParentRight="true"
            app:layout_marginTopPercent="22.4%w"
            app:layout_marginRightPercent="1.8%w"
            android:src="@mipmap/chakan_pinlun_icon" />

        <TextView
            android:id="@+id/tv_zhongjian_Msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="16.9%"
            app:layout_heightPercent="6.8%w"
            android:background="@mipmap/prize_detail_btn"
            android:textColor="@color/text_01"
            android:gravity="center"
            android:layout_alignParentRight="true"
            app:layout_marginTopPercent="22.4%w"
            app:layout_marginRightPercent="1.8%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>