<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10.63%w">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            app:layout_heightPercent="8.21%w"
            app:layout_marginLeftPercent="3.62%w"
            app:layout_widthPercent="8.21%w"
            app:srcCompat="@mipmap/default_touxiang" />

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_logo"
            android:text="TextView"
            android:textColor="@color/text_05"
            app:layout_marginLeftPercent="1.6%w"
            app:layout_textSizePercent="3.38%w" />


        <TextView
            android:id="@+id/tv_logo_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:textColor="@color/text_11"
            app:layout_marginRightPercent="3.62%w"
            app:layout_textSizePercent="3.14%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_logo"
            android:text="TextView"
            android:textColor="@color/text_05"
            app:layout_marginBottomPercent="4.83%w"
            app:layout_marginLeftPercent="3.62%w"
            app:layout_marginRightPercent="3.62%w"
            app:layout_marginTopPercent="4.83%w"
            app:layout_textSizePercent="3.62%w" />

        <HorizontalScrollView
            android:id="@+id/hs_1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:fadingEdge="none"
            android:scrollbars="none"
            app:layout_heightPercent="30.19%w"
            app:layout_paddingBottomPercent="4.35%w"
            app:layout_paddingLeftPercent="2.17%w"
            app:layout_paddingRightPercent="2.17%w"
            app:layout_paddingTopPercent="4.35%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_paddingLeftPercent="2.62%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_01"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_02"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_03"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_04"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_05"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_06"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_07"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_07"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_08"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="5.24%h">

                    <ImageView
                        android:id="@+id/iv_08"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pl_09"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_paddingLeftPercent="5.24%h"
                    app:layout_paddingRightPercent="2.62%h">

                    <ImageView
                        android:id="@+id/iv_09"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/default_load"
                        android:scaleType="fitXY"
                        app:layout_widthPercent="100%h" />

                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </HorizontalScrollView>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_line"
        app:layout_marginLeftPercent="3.62%w"
        app:layout_marginRightPercent="3.62%w" />

</com.zhy.android.percent.support.PercentLinearLayout>