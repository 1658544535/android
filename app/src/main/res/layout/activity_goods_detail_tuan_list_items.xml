<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_marginLeftPercent="3.22%w"
        app:layout_marginTopPercent="3.22%w"
        app:layout_marginRightPercent="3.22%w"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_corner_dl"
            app:layout_heightPercent="15.75%w">

            <ImageView
                android:id="@+id/iv_userImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                app:layout_heightPercent="10.82%w"
                app:layout_marginLeftPercent="4%w"
                app:layout_widthPercent="10.82%w"
                app:srcCompat="@mipmap/default_touxiang" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_userImage"
                android:maxLines="1"
                android:text="TextView"
                android:textColor="@color/text_10"
                app:layout_marginLeftPercent="3%w"
                app:layout_textSizePercent="3%w" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/tv_endTime"
                app:layout_heightPercent="4%w"
                app:layout_marginBottomPercent="3.2%w"
                app:layout_marginRightPercent="1%w"
                app:layout_widthPercent="4%w"
                android:src="@mipmap/jiesu_shijian"
                />

            <TextView
                android:id="@+id/tv_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/tv_cantuan"
                android:text="TextView"
                android:textColor="@color/text_04"
                app:layout_marginBottomPercent="3.6%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:id="@+id/tv_oweNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/tv_cantuan"
                android:text="TextView"
                android:textColor="@color/base_red"
                app:layout_marginBottomPercent="9.6%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:id="@+id/tv_cantuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_corner_gdbtn"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/gd_ctbtn"
                android:textColor="@color/white"
                app:layout_marginLeftPercent="4%w"
                app:layout_textSizePercent="3%w"
                app:layout_widthPercent="21.21%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>