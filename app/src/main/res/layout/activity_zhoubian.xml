<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/zhoubian"
    android:scaleType="fitXY"
    />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        app:layout_marginTopPercent="77.85%w"
        app:layout_widthPercent="77.93%w">

        <EditText
            android:visibility="gone"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_white_4dp"
            android:hint="输入手机号码"
            android:inputType="number"
            android:maxLines="1"
            app:layout_paddingPercent="4.85%w"
            app:layout_textSizePercent="5.26%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.54%w">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_captcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/blue_white_6dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                app:layout_paddingPercent="4.85%w"
                app:layout_textSizePercent="5.26%w" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_captcha"
                android:background="@drawable/red_white_4dp"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="6"
                app:layout_marginRightPercent="3.61%w"
                app:layout_paddingPercent="4.85%w"
                app:layout_textSizePercent="5.26%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <EditText
            android:id="@+id/et_code"
            app:layout_marginTopPercent="2.54%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_white_4dp"
            android:hint="输入兑换码"
            android:inputType="number"
            android:maxLines="1"
            app:layout_paddingPercent="4.85%w"
            app:layout_textSizePercent="5.26%w" />

        <TextView
            android:id="@+id/tv_btn"
            app:layout_marginTopPercent="4.99%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_red_15dp"
            android:text="领取优惠券"
            android:textColor="@color/zb_dark_red"
            app:layout_paddingPercent="5.78%w"
            android:gravity="center"
            app:layout_textSizePercent="7.43%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/goods_back"
        app:layout_heightPercent="7.8%w"
        app:layout_marginLeftPercent="3%w"
        android:layout_marginTop="25dp"
        app:layout_widthPercent="7.8%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>