<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg">


    <com.allure.lbanners.LMBanners
        android:id="@+id/banners"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:auto_play="true"
        app:canLoop="true"
        app:durtion="5000"
        app:horizontal_transitionEffect="accordion"
        app:indicator_position="bottom_mid"
        app:indicator_select="@drawable/page_indicator_select"
        app:indicator_unselect="@drawable/page_indicator_unselect"
        app:isVertical="false"
        app:layout_heightPercent="55.56%w"
        app:scroll_duration="66666"
        app:srcCompat="@mipmap/default_load" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banners"
        android:background="@color/white"
        app:layout_minHeightPercent="19.32%w"
        app:layout_paddingBottomPercent="1%w"
        app:layout_paddingLeftPercent="4%w"
        app:layout_paddingRightPercent="4%w"
        app:layout_paddingTopPercent="3%w">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingMultiplier="1.2"
            android:text="TextView"
            android:textColor="@color/text_02"
            app:layout_textSizePercent="5.07%w" />

        <TextView
            android:id="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:text="@string/c_kj"
            android:textColor="@color/text_01"
            app:layout_marginTopPercent="3%w"
            app:layout_textSizePercent="3.86%w" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>