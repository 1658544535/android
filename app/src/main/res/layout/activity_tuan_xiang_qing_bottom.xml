<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15.94%w">1

        <ImageView
            android:id="@+id/iv_bom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            app:layout_marginRightPercent="2.41%w"
            app:layout_widthPercent="47.82%w" />

        <ImageView
            android:id="@+id/iv_bom_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_bom_right"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/txq_ckgd"
            android:visibility="gone"
            app:layout_widthPercent="47.82%w" />

        <ImageView
            android:id="@+id/iv_bom_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/txq_genduo"
            android:visibility="gone"
            app:layout_widthPercent="95.41%w" />

        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rly"
            android:background="@mipmap/kt_gdpt"
            app:layout_heightPercent="9.17%w"
            app:layout_widthPercent="22.46%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rly"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/kt_beijing"
            app:layout_heightPercent="8.93%w"
            app:layout_widthPercent="72.94%w">

            <TextView
                android:id="@+id/tv_mashangkaituan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/kt_mskt"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_textSizePercent="4.96%w" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_price"
                android:textColor="@color/white"
                app:layout_marginRightPercent="2.98%w"
                app:layout_textSizePercent="4.96%w" />

            <TextView
                android:id="@+id/tv_sellingprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                app:layout_marginRightPercent="14.04%w"
                app:layout_textSizePercent="3.97%w" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_sellingprice"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_marginRightPercent="1.99%w"
                app:layout_textSizePercent="5.73%w"

                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>