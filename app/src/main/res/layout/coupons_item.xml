<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="22.7%w">
        <TextView
            android:id="@+id/tv_miantuanquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="4%w"
            android:text="团长免单券"
            android:textColor="@color/text_01"
            app:layout_marginLeftPercent="3.5%w"
            app:layout_marginTopPercent="3.5%w"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="3.8%w"
            android:layout_toRightOf="@+id/tv_miantuanquan"
            app:layout_marginTopPercent="3.6%w"
            app:layout_marginLeftPercent="2.5%w"
            android:text="(团长免费开团)"
            android:textColor="@color/text_01"/>
        <TextView
            android:id="@+id/tv_djxz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="3.6%w"
            android:layout_below="@+id/tv_miantuanquan"
            app:layout_marginTopPercent="3.5%w"
            app:layout_marginLeftPercent="3.5%w"
            android:text="点击选择团免商品"
            android:textColor="#3E3A39"/>
        <TextView
            android:id="@+id/tv_effective_Dates"
            android:layout_below="@+id/tv_djxz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="3.7%w"
            app:layout_marginLeftPercent="3.5%"
            android:text="有效期:"
            android:textColor="#949494"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%"
            android:background="@mipmap/coupon_red"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="5%w"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="￥"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="13%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>