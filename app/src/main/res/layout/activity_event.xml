<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptrf_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/iv_xx"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/merry_ae_hongbao"
            app:layout_widthPercent="85.5%w"
            app:layout_heightPercent="102.76%w"
            android:layout_centerInParent="true"
            />



        <ImageView
            android:id="@+id/iv_take"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_marginBottomPercent="5%w"
            android:layout_alignBottom="@+id/iv_xx"
             />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>