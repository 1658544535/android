<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="26.33%w"
        app:layout_paddingBottomPercent="7.73%w"
        app:layout_paddingTopPercent="7.73%w">

        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rly"
            android:background="@mipmap/kt_gdpt"
            app:layout_heightPercent="9.17%w"
            app:layout_widthPercent="22.46%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rly"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/kt_beijing"
            app:layout_heightPercent="9.17%w"
            app:layout_marginBottomPercent="14.2%w"
            app:layout_marginLeftPercent="2.17%w"
            app:layout_widthPercent="72.94%w">

            <TextView
                android:id="@+id/tv_mashangkaituan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/kt_mskt"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_textSizePercent="4.96%w"


                />


            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_price"
                android:textColor="@color/white"
                app:layout_marginRightPercent="2.98%w"
                app:layout_textSizePercent="4.96%w" />

            <TextView
                android:id="@+id/tv_sellingprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                app:layout_marginRightPercent="14.04%w"
                app:layout_textSizePercent="3.97%w" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_sellingprice"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_textSizePercent="5.73%w"
                app:layout_marginRightPercent="1.99%w"

                />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>