                android:textColor="@color/text_07"
                app:layout_marginLeftPercent="0%w"
                app:layout_textSizePercent="4%w" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Tex"
                android:textColor="@color/white"
                app:layout_marginRightPercent="6%w"
                app:layout_textSizePercent="8%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="10.94%w"
            app:layout_marginBottomPercent="6.25%w"
            app:layout_marginLeftPercent="27.5%w"
            app:layout_widthPercent="44.06%w" />

