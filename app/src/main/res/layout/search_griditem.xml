<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_productLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="100%w"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="37.25%w"
>
    <TextView
        android:id="@+id/tv_groupNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="15.3%"
        app:layout_heightPercent="5.5%w"
        android:text="2人团"
        app:layout_marginLeftPercent="7.1%w"
        app:layout_marginTopPercent="6.5%w"
        app:layout_textSizePercent="3.4%w"
        android:gravity="center"
        android:textColor="@color/text_03"
        android:background="@drawable/shap_corner_redwhite"/>
    <TextView
        android:id="@+id/tv_productMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_textSizePercent="5.9%w"
        app:layout_marginTopPercent="5.5%w"
        app:layout_marginRightPercent="8.1%w"
        app:layout_marginLeftPercent="7.1%w"
        android:maxLines="2"

        android:text="            product 信息"
        />
    <TextView
        android:id="@+id/tv_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="8.5%w"
        app:layout_marginLeftPercent="7.1%w"
        app:layout_marginBottomPercent="6.5%w"
        android:textColor="#F85981"
        android:text="Price"/>
    <TextView
        android:id="@+id/tv_productedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="4.9%w"
        app:layout_marginLeftPercent="7.1%w"
        app:layout_marginBottomPercent="6.5%w"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="8.1%w"
        android:textColor="#979797"
        android:text="已团商品数量"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>