<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="23.43%w"
        app:layout_paddingRightPercent="6.52%w">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="13.77%w"
            app:layout_marginLeftPercent="2.66%w"
            app:layout_widthPercent="13.77%w"
            app:srcCompat="@color/blue" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/pt_fail"
            android:textColor="@color/text_02"
            app:layout_marginBottomPercent="14.2%w"
            app:layout_marginLeftPercent="21.74%w"
            app:layout_textSizePercent="4.35%w" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:lines="2"
            android:text="@string/pt_fail_f"
            android:textColor="@color/text_11"
            app:layout_marginBottomPercent="4.11%w"
            app:layout_marginLeftPercent="21.74%w"
            app:layout_textSizePercent="3.14%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>