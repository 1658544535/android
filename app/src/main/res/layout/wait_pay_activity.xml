<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fb">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="2.4%w"
        android:background="#ffffff">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="12%"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/layout_kefu">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="40%"
                app:layout_heightPercent="40%w"
                android:src="@mipmap/kefu_icon"
                app:layout_marginTopPercent="17%w"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="25%w"
                android:text="客服"
                app:layout_marginTopPercent="8%w"
                android:layout_gravity="center_horizontal"/>

        </com.zhy.android.percent.support.PercentLinearLayout>
        <TextView
            android:id="@+id/btn_cancelOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="43%"
            app:layout_textSizePercent="3.6%w"
            app:layout_marginRightPercent="43%"
            android:text="取消订单"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="#FF8186"
            />
        <TextView
            android:id="@+id/btn_goPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="43%"
            app:layout_textSizePercent="3.6%w"
            android:text="去支付"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="#FF464E"


            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="85%"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/layout_waitPay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="26.1%w"
            android:paddingTop="40dp"
            android:paddingLeft="40dp"
            app:layout_textSizePercent="4.4%w"
            android:textColor="#ffffff"
            android:text="等待买家付款"
            android:background="#FF464E"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20.9%"
            app:layout_heightPercent="12.1%w"
            app:layout_marginLeftPercent="63.2%w"
            android:layout_centerVertical="true"
            android:src="@mipmap/waitpay_icon"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tv_address_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="3.3%w"
            app:layout_marginLeftPercent="3.3%"
            app:layout_textSizePercent="3.1%w"
            android:textColor="#666666"
            android:text="地址状态"/>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="18.3%w"
            app:layout_marginTopPercent="3.3%w"
            android:background="#ffffff">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="3.9%"
                app:layout_heightPercent="5%w"
                app:layout_marginLeftPercent="2.4%"
                android:layout_centerVertical="true"
                android:src="@mipmap/address_gray_icon"/>
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent= "3.9%w"
                app:layout_marginLeftPercent="9.5%"
                app:layout_textSizePercent="3.3%w"
                android:textColor="#1c1c1c"
                />
            <TextView
                android:id="@+id/tv_userPhoneNum"
                android:layout_toRightOf="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent= "3.9%w"
                app:layout_marginLeftPercent="4.5%"
                app:layout_textSizePercent="3.3%w"
                android:textColor="#1c1c1c"
                />
            <TextView
                android:id="@+id/tv_userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                app:layout_marginTopPercent= "2.4%w"
                app:layout_marginLeftPercent="9.5%"
                app:layout_textSizePercent="3.8%w"
                android:textColor="#1c1c1c"
                />
            <TextView
                android:id="@+id/tv_emptyTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coa_dz"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="1.6%"
                app:layout_heightPercent="3.4%w"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_right_icon"
                app:layout_marginRightPercent="2.7%"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="41.5%w"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:id="@+id/pintuan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="3.7%"
                app:layout_heightPercent="3.7%w"
                app:layout_marginTopPercent="5.8%"
                android:src="@mipmap/pintuan_product"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pintuan"
                app:layout_textSizePercent="3.3%w"
                app:layout_marginTopPercent="5.8%"
                app:layout_marginLeftPercent="2.0%"
                android:text="拼团商品"
                android:textColor="#5f5f5f"/>
            <View
                android:id="@+id/xian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_marginTopPercent="2%w"
                android:background="#e7e7e7"
                android:layout_below="@+id/pintuan"></View>
            <ImageView
                android:id="@+id/iv_shangpin_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/xian"
                app:layout_widthPercent="17%"
                app:layout_heightPercent="17%w"
                app:layout_marginTopPercent="3.1%w"/>
            <TextView
                android:id="@+id/tv_shangpin_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="67.3%"
                android:layout_toRightOf="@+id/iv_shangpin_logo"
                android:layout_alignTop="@+id/iv_shangpin_logo"
                app:layout_textSizePercent="3.3%w"
                app:layout_marginLeftPercent="3.6%"
                android:textColor="#1c1c1c"
                android:lines="2"
                android:text="商品标题"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_marginTopPercent="3.1%w"
                android:background="#e7e7e7"
                android:layout_below="@+id/iv_shangpin_logo"></View>
            <TextView
                android:id="@+id/tv_noPass_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="3.2%w"
                app:layout_marginBottomPercent="1.8%w"
                android:layout_alignParentBottom="true"

                />
            <TextView
                android:id="@+id/tv_shangpin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginBottomPercent="1.8%w"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:layout_textSizePercent="3.3%w"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="22.1%w"
            app:layout_marginTopPercent="3.3%w"
            android:orientation="vertical"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tv_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="3.5%"
                app:layout_marginTopPercent="2.8%w"
                app:layout_textSizePercent="3.3%w"
                android:textColor="#1c1c1c"
                android:text="订单编号："
                />

            <TextView
                android:id="@+id/tv_payMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="3.5%"
                app:layout_marginTopPercent="1.8%w"
                app:layout_textSizePercent="3.3%w"
                android:textColor="#1c1c1c"
                android:text="支付方式："
                />
            <TextView
                android:id="@+id/tv_confirmOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="3.5%"
                app:layout_marginTopPercent="1.8%w"
                app:layout_textSizePercent="3.3%w"
                android:textColor="#1c1c1c"
                android:text="下单时间："
                />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/layout_payWechat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="11.6%w"
            app:layout_marginTopPercent="3.3%w"
            android:background="#ffffff"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="5.7%"
                app:layout_heightPercent="5.3%w"
                app:layout_marginLeftPercent="2.7%"
                android:layout_centerVertical="true"
                android:src="@mipmap/paywechat_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="3.3%w"
                app:layout_marginLeftPercent="11.4%"
                android:textColor="#1c1c1c"
                android:text="微信支付"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="8%"
                app:layout_heightPercent="4.6%w"
                app:layout_marginLeftPercent="27.3%"
                android:layout_centerVertical="true"
                android:src="@mipmap/recommend_icon"/>
            <ImageView
                android:id="@+id/iv_select_payWechat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="3.3%w"
                app:layout_heightPercent="2.9%w"
                android:src="@mipmap/payway_select_icon"
                app:layout_marginRightPercent="4.5%w"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_widthPercent="93.5%"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#e7e7e7"
                ></View>

        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/layout_payAlipay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="11.6%w"
            android:background="#ffffff"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="5.7%"
                app:layout_heightPercent="5.3%w"
                app:layout_marginLeftPercent="2.7%"
                android:layout_centerVertical="true"
                android:src="@mipmap/pay_alipay_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="3.3%w"
                app:layout_marginLeftPercent="11.4%"
                android:textColor="#1c1c1c"
                android:text="支付宝支付"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_select_payAlipay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="3.3%w"
                app:layout_heightPercent="2.9%w"
                app:layout_marginRightPercent="4.5%w"
                android:src="@mipmap/payway_select_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_widthPercent="93.5%"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#e7e7e7"
                ></View>

        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/layout_payQQ"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="11.6%w"
            android:background="#ffffff"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="5.7%"
                app:layout_heightPercent="5.3%w"
                app:layout_marginLeftPercent="2.7%"
                android:layout_centerVertical="true"
                android:src="@mipmap/payqq_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="3.3%w"
                app:layout_marginLeftPercent="11.4%"
                android:textColor="#1c1c1c"
                android:text="QQ钱包"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_select_payqq"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="3.3%w"
                app:layout_heightPercent="2.9%w"
                app:layout_marginRightPercent="4.5%w"
                android:src="@mipmap/payway_select_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>


</com.zhy.android.percent.support.PercentRelativeLayout>