<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="9.18%w">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="4.59%w"
            app:layout_marginLeftPercent="3.86%w"
            app:layout_widthPercent="4.59%w"
            app:srcCompat="@mipmap/dd_gd_lb" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center_vertical"
            android:text="@string/cy_g"
            android:textColor="@color/text_13"
            app:layout_marginLeftPercent="1%w"
            app:layout_textSizePercent="3.5%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="9.903%w">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/text_01"
            android:gravity="center"
            android:text="@string/cy_yd"
            android:textColor="@color/white"
            app:layout_textSizePercent="3.623%w" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/btn_03"
            android:gravity="center"
            android:text="@string/cy_ed"
            android:textColor="@color/white"
            app:layout_textSizePercent="3.623%w" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/btn_03"
            android:gravity="center"
            android:text="@string/cy_sd"
            android:textColor="@color/white"
            app:layout_textSizePercent="3.623%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="9.903%w">

        <TextView
            android:id="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cy_yx"
            android:textColor="@color/text_01"
            app:layout_marginRightPercent="4.59%w"
            app:layout_textSizePercent="3.623%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_line"
        app:layout_marginLeftPercent="4.59%w"
        app:layout_marginRightPercent="4.59%w" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="4.11%w" />
</com.zhy.android.percent.support.PercentLinearLayout>