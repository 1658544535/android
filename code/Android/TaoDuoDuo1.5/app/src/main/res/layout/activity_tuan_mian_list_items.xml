<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="29%w"
        app:layout_paddingBottomPercent="4.83%w"
        app:layout_paddingLeftPercent="3.5%w"
        app:layout_paddingRightPercent="3.5%w"
        app:layout_paddingTopPercent="4.83%w">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/line_02"
            android:padding="0.5dp"
            android:scaleType="centerCrop"
            app:layout_heightPercent="20.53%w"
            app:layout_widthPercent="20.53%w"
            app:srcCompat="@mipmap/default_load" />

        <TextView
            android:id="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="          TextView"
            android:textColor="@color/text_02"
            app:layout_marginLeftPercent="24.54%w"
            app:layout_marginTopPercent="1%w"
            app:layout_textSizePercent="4%w" />
        <TextView
            android:id="@+id/rs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="äºº"
            android:background="@drawable/shape_corner_type"
            android:gravity="center"
            android:textColor="@color/text_19"
            app:layout_heightPercent="4%w"
            app:layout_marginLeftPercent="24.54%w"
            app:layout_marginTopPercent="1.3%w"
            app:layout_textSizePercent="2.5%w"
            app:layout_widthPercent="8%w" />
        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/text_01"
            app:layout_marginBottomPercent="1%w"
            app:layout_marginLeftPercent="24.54%w"
            app:layout_textSizePercent="4%w" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_jiage"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/text_09"
            app:layout_marginBottomPercent="1%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_textSizePercent="3%w" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/dd_mt_kt"
            app:layout_heightPercent="6.28%w"
            app:layout_marginBottomPercent="1%w"
            app:layout_widthPercent="17.87%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>