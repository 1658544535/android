<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="38.4%w"
        app:layout_paddingLeftPercent="3.3%w"
        app:layout_paddingRightPercent="3.3%w"
        android:background="@color/white">

        <ImageView
            android:id="@+id/pintuan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="3.7%"
            app:layout_heightPercent="3.7%w"
            app:layout_marginTopPercent="5.8%"
            android:src="@mipmap/pintuan_product" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pintuan"
            app:layout_textSizePercent="3.3%w"
            app:layout_marginTopPercent="5.8%"
            app:layout_marginLeftPercent="2.0%"
            android:text="拼团商品"
            android:textColor="#5f5f5f" />

        <TextView
            android:id="@+id/tv_mydraw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="2.8%w"
            app:layout_marginTopPercent="6.2%"
            android:textColor="#ff464e"
            android:text="status"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="3.5%w"
            android:background="#e7e7e7"
            android:layout_below="@+id/pintuan"></View>

        <ImageView
            android:id="@+id/iv_mydraw_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/xian"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="20%w"
            app:layout_marginTopPercent="4.1%w"
            android:src="@mipmap/default_load" />

        <TextView
            android:id="@+id/tv_mydraw_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="67.3%"
            android:layout_toRightOf="@+id/iv_mydraw_logo"
            android:layout_alignTop="@+id/iv_mydraw_logo"
            app:layout_textSizePercent="3.3%w"
            app:layout_marginLeftPercent="3.6%"
            android:textColor="#1c1c1c"
            android:lines="2"
            android:text="商品标题" />

        <TextView
            android:id="@+id/tv_mydraw_proNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_mydraw_title"
            android:layout_alignParentRight="true"
            app:layout_textSizePercent="3.1%w"
            android:textColor="#949494"
            android:text="x1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_mydraw_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_mydraw_logo"
            android:layout_alignParentRight="true"
            app:layout_textSizePercent="3.1%w"
            android:textColor="#595757"
            android:text="价格:" />


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout_mydraw_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="11%w"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_marginRightPercent="3.3%w"></View>

        <TextView
            android:id="@+id/tv_zhongjian_Msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="16.9%"
            app:layout_heightPercent="6.8%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shap_corner_redwhite"
            android:text="中奖信息"
            app:layout_textSizePercent="3.3%w"
            android:textColor="@color/text_01"
            android:gravity="center"
            app:layout_marginRightPercent="3.5%w" />

        <TextView
            android:id="@+id/tv_shaitu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="16.9%"
            app:layout_heightPercent="6.8%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shap_coner_graywhite"
            android:text="我要晒图"
            app:layout_textSizePercent="3.3%w"
            android:textColor="@color/text_08"
            android:gravity="center"
            app:layout_marginRightPercent="23.9%w" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>