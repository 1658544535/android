<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8fb"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_heightPercent="40%">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/my_top_bg"
            app:layout_heightPercent="20%w" />

        <ImageView
            android:id="@+id/iv_userlogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/default_touxiang"
            app:layout_heightPercent="26.5%"
            app:layout_marginTopPercent="18%"
            app:layout_widthPercent="26.5%h" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_userlogo"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:textColor="#858585"
            app:layout_marginTopPercent="5%"
            app:layout_textSizePercent="4.1%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/layout_weifukuantext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:visibility="gone"
            app:layout_marginTopPercent="3%w">

            <TextView
                android:id="@+id/tv_weifukuantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="还有未付款"
                android:textColor="@color/text_11"
                app:layout_marginRightPercent="6%w"
                app:layout_textSizePercent="4%w" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_username"
                android:src="@mipmap/arrow_right_icon"
                app:layout_heightPercent="2.6%w"
                app:layout_marginRightPercent="3%w"
                app:layout_marginTopPercent="1%w"
                app:layout_widthPercent="1.8%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_username"
            android:layout_centerHorizontal="true"
            android:background="#e9e9e9"
            app:layout_marginTopPercent="15.5%"
            app:layout_widthPercent="80.9%"></View>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            app:layout_heightPercent="24.2%"
            app:layout_widthPercent="90%">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/pintuanzhong_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_widthPercent="20%w">

                <TextView
                    android:id="@+id/tv_pintuanNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_13"
                    app:layout_textSizePercent="20%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拼团中"
                    app:layout_marginTopPercent="12%"
                    app:layout_textSizePercent="20%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daifahuo_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_widthPercent="20%w">

                <TextView
                    android:id="@+id/tv_daifahuoNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_13"
                    app:layout_textSizePercent="20%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待发货"
                    app:layout_marginTopPercent="12%"
                    app:layout_textSizePercent="20%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daishouhuo_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_widthPercent="20%w">

                <TextView
                    android:id="@+id/tv_daishouhuoNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_13"
                    app:layout_textSizePercent="20%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收货"
                    app:layout_marginTopPercent="12%"
                    app:layout_textSizePercent="20%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/daipinjia_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_widthPercent="20%w">

                <TextView
                    android:id="@+id/tv_daipinjiaNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_13"
                    app:layout_textSizePercent="20%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    app:layout_marginTopPercent="12%"
                    app:layout_textSizePercent="20%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/tuikuan_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_widthPercent="20%w">

                <TextView
                    android:id="@+id/tv_tuikuanNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_13"
                    app:layout_textSizePercent="20%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款/售后"
                    app:layout_marginTopPercent="12%"
                    app:layout_textSizePercent="20%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <include
                android:id="@+id/iv_tuanmianquan"
                layout="@layout/common_tuanmianquan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_heightPercent="22.7%w"
                app:layout_marginTopPercent="2.8%w"
                app:layout_widthPercent="95.2%"></include>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_qb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_heightPercent="12%w"
                app:layout_marginTopPercent="3%w"
                app:layout_paddingPercent="1%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/dd_qb"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="100%h" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="我的钱包"
                        app:layout_textSizePercent="4.2%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <TextView
                    android:id="@+id/tv_qb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="余额：0"
                    app:layout_marginRightPercent="2%w"
                    app:layout_textSizePercent="4.2%w" />

            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                app:layout_heightPercent="18%w"
                app:layout_marginTopPercent="2.6%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myCoupons"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/my_coupons_icon"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="10.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_coupons"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"
                    app:layout_marginBottomPercent="1%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myGroup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/my_pintuan_icon"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="10.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_group"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"
                    app:layout_marginBottomPercent="1%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myCaijia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/my_caijia_icon"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="10.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_caijia"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"
                    app:layout_marginBottomPercent="1%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myPrize"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/my_choujian"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="10.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_choujian"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />

                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                app:layout_heightPercent="20%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myCollect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/my_collect_icon"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="19.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_collect"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_myAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/myaddress_icon"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="19.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_address"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_kefu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:id="@+id/ke"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/kefu"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="19.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kefu"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_04"
                    app:layout_heightPercent="9.7%w"></View>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/layout_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_widthPercent="24.7%w">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@mipmap/settings"
                        app:layout_heightPercent="28.2%w"
                        app:layout_marginTopPercent="19.4%w"
                        app:layout_widthPercent="28.2%w" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textColor="@color/text_18"
                        app:layout_marginTopPercent="11.36%w"
                        app:layout_textSizePercent="11.68%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>


            <TextView
                android:id="@+id/tv_exitLogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.53"
                android:background="#ffffff"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#231815"
                android:visibility="gone"
                app:layout_heightPercent="11.5%w"
                app:layout_marginBottomPercent="2.8%w"
                app:layout_marginTopPercent="5.1%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>


</com.zhy.android.percent.support.PercentLinearLayout>