<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_allpeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.qunyu.taoduoduo.widget.ListViewForScrollView
            android:id="@+id/lv_gpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@color/transparent"
            android:background="@color/white"
            app:layout_paddingLeftPercent="4.59%w"
            app:layout_paddingRightPercent="4.59%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_allpeoplebottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@drawable/shape_corner_dl"
            app:layout_heightPercent="12.56%w"
            app:layout_marginLeftPercent="4.59%w"
            app:layout_marginRightPercent="4.59%w">

            <ImageView
                android:id="@+id/wenhao"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_btm_pmsg"
                android:src="@mipmap/kt_wenhao"
                android:visibility="invisible"
                app:layout_heightPercent="9.9%w"
                app:layout_marginRightPercent="5.88%w"
                app:layout_widthPercent="9.9%w" />

            <TextView
                android:id="@+id/tv_btm_pmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_01"
                app:layout_textSizePercent="3.74%w" />

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>