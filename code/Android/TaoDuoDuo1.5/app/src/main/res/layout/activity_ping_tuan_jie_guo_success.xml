<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6.52%w"
            android:layout_toLeftOf="@+id/tv_headtitle"
            app:layout_widthPercent="6.52%w"
            app:layout_marginTopPercent="3.82%w"
            app:layout_marginRightPercent="2.41%w"
            />

        <TextView
            android:id="@+id/tv_headtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="4.83%w"
            android:layout_centerHorizontal="true"
            app:layout_textSizePercent="4.35%w" />

        <TextView
            android:id="@+id/tv_tipscontent"
            android:layout_below="@+id/tv_headtitle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/text_11"
            app:layout_marginTopPercent="3.14%w"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="14%w"
            app:layout_marginRightPercent="14%w"
            app:layout_textSizePercent="3.14%w"
            app:layout_marginBottomPercent = "3.86%w"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>