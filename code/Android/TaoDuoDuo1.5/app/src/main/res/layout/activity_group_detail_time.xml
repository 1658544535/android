<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gray_radius_4dp"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_textSizePercent="2.65%w" />

        <TextView
            android:id="@+id/txtview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_mm"
            android:padding="5dp"
            android:text=":"
            android:textColor="@color/text_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_mm"
            android:padding="5dp"
            android:text=":"
            android:textColor="@color/text_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/txtview1"
            android:background="@drawable/gray_radius_4dp"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_textSizePercent="2.65%w" />

        <TextView
            android:id="@+id/tv_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txtview2"
            android:background="@drawable/gray_radius_4dp"
            android:padding="5dp"
            android:textColor="@color/white"
            app:layout_textSizePercent="2.65%w" />

        <TextView
            android:id="@+id/txtview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_hh"
            android:padding="5dp"
            android:text="剩余"
            android:textColor="@color/text_13"
            app:layout_textSizePercent="3.14%w" />

        <TextView
            android:id="@+id/txtview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_ss"
            android:padding="5dp"
            android:text="结束"
            android:textColor="@color/text_13"
            app:layout_textSizePercent="3.14%w" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/txtview3"
            android:background="@color/gray_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/txtview4"
            android:background="@color/gray_light" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>