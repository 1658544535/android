<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:background="@color/white"
        app:layout_paddingPercent="3%w"
        app:layout_marginTopPercent="3%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="4.2%w"
            android:text="当前版本"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.5"
            android:layout_alignParentRight="true"
            app:layout_textSizePercent="4.2%w"

            android:layout_centerVertical="true" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_paddingPercent="2.8%w"
        android:background="@color/white"
        app:layout_marginTopPercent="9%w"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="40%w"
            app:layout_heightPercent="40%w"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_textSizePercent="4.2%w"
            android:text="@string/about_pdh_download"
            android:layout_gravity="center_horizontal"
            app:layout_marginTopPercent="2.7%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>